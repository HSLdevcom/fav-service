{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    "List favourites": {
      "matchCondition": {
        "methods": ["GET"],
        "route": "api/favorites/{id}"
      },
      "backendUri": "https://%FAVORITES_HOST%/api/get?store=fav"
    },
    "Update favourites": {
      "matchCondition": {
        "methods": ["PUT"],
        "route": "api/favorites/{id}"
      },
      "backendUri": "https://%FAVORITES_HOST%/api/put?store=fav"
    },
    "Delete favourites": {
      "matchCondition": {
        "methods": ["DELETE"],
        "route": "api/favorites/{id}"
      },
      "backendUri": "https://%FAVORITES_HOST%/api/remove?store=fav"
    }
  }
}
