{
  "name": "favorites-ms",
  "version": "0.0.1",
  "description": "Favorites microservice for HSL",
  "main": "index.js",
  "repository": "https://gitlab.hsl.fi/mobidigi/fav-service",
  "author": "Krister BÃ¤ckman <krister.backman@digia.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "ajv": "8.6.2",
    "ajv-formats": "2.1.1",
    "axios": "0.21.1",
    "ioredis": "4.27.7",
    "uuidv4": "6.2.11"
  },
  "devDependencies": {
    "@azure/functions": "^1.2.3",
    "@types/axios": "^0.14.0",
    "@types/ioredis": "^4.26.7",
    "@types/node": "^16.6.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "ava": "^2.4.0",
    "babel-eslint": "^10.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "nock": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "4.3.5",
    "typescript-json-schema": "^0.50.1"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.json src/local.settings.json dist/",
    "dev": "npm-run-all --parallel watch start",
    "build": "yarn clean && tsc && yarn copy-files",
    "start": "func host start --prefix dist --language typescript",
    "watch": "yarn copy-files && tsc -w",
    "lint": "eslint '*/**/*.ts'",
    "test": "nyc ava -v"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts}": [
      "yarn lint"
    ]
  }
}
